<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PayrollCalculator.MainPage">

    <StackLayout >
        <Frame>
            <Label Text="Rhysin Villahermosa &amp; Mark Neo Mamalias" HorizontalOptions="Center"/>
        </Frame>
        
        <StackLayout Padding="40,80,40,0">
        <Label Text="Input Rate per Hour" HorizontalOptions="Center" FontSize="20" />
        <Entry x:Name="hrate" Keyboard="Numeric" HorizontalTextAlignment="Center"  ClearButtonVisibility="WhileEditing"/>

        <Label Text="Input Employee Status" HorizontalOptions="Center" FontSize="20" />
        <Entry x:Name="estatus" TextTransform="Uppercase" HorizontalTextAlignment="Center" MaxLength="1" ClearButtonVisibility="WhileEditing"/>

        <Label Text="Input Civil Status" HorizontalOptions="Center" FontSize="20"/>
        <Entry x:Name="cstatus" TextTransform="Uppercase" HorizontalTextAlignment="Center"  MaxLength="1"  ClearButtonVisibility="WhileEditing"  />

        <Button Text="Calculate" Clicked="Button_Clicked" HorizontalOptions="Center" FontSize="15" CornerRadius="10" Margin="0,15,0,0" />
        </StackLayout>
    </StackLayout>
</ContentPage>
